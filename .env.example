# Todo-Go Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI Provider Configuration
# =============================================================================

# AI Provider: deepseek, openai, or anthropic (claude)
# Aliases supported: gpt, chatgpt -> openai | claude -> anthropic | ds -> deepseek
AI_PROVIDER=deepseek

# API Key for the selected provider
# - DeepSeek: Get your key from https://platform.deepseek.com/
# - OpenAI: Get your key from https://platform.openai.com/api-keys
# - Anthropic: Get your key from https://console.anthropic.com/
API_KEY=your-api-key-here

# =============================================================================
# Optional: Custom Model and Base URL
# =============================================================================

# Custom model name (leave empty for provider defaults)
# Default models:
#   - DeepSeek: deepseek-chat
#   - OpenAI: gpt-4o-mini
#   - Anthropic: claude-sonnet-4-20250514
LLM_MODEL=

# Custom API base URL (leave empty for provider defaults)
# Default URLs:
#   - DeepSeek: https://api.deepseek.com/chat/completions
#   - OpenAI: https://api.openai.com/v1/chat/completions
#   - Anthropic: https://api.anthropic.com/v1/messages
# Useful for:
#   - Azure OpenAI endpoints
#   - Self-hosted models
#   - Proxy servers
LLM_BASE_URL=

# =============================================================================
# Storage Configuration
# =============================================================================

# Custom path for todo data file (default: ~/.todo/todo.json)
TODO_PATH=

# Custom path for backup file (default: ~/.todo/todo_back.json)
TODO_BACKUP_PATH=

